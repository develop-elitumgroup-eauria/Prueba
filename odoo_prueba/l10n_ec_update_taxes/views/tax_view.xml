<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="tax_inherit_view_form" model="ir.ui.view">
            <field name="name">tax_inherit_view_form</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button
                                string="Reemplazar Impuesto"
                                type="object"
                                name="update_tax"
                                class="btn btn-primary"
                                attrs="{'invisible': [('is_updated', '=', True)]}"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='amount_type']" position="after">
                    <field name="tax_update_id"/>
                    <field name="is_updated" invisible="1"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>

