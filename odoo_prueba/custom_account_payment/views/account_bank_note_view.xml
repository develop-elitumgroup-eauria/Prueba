<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="account_bank_note_deducible_inherit" model="ir.ui.view">
            <field name="name">account_bank_note_deducible_inherit</field>
            <field name="model">account.bank.note</field>
            <field name="inherit_id" ref="custom_account_accountant.view_form_bank_note"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="is_deducible" attrs="{'readonly': [('state', '=', 'posted')]}" force_save="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
