<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="account_payment_deducible_inherit" model="ir.ui.view">
            <field name="name">account_payment_deducible_inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="is_deducible"
                           attrs="{'readonly': [('state', '=', 'posted')], 'invisible': [('move_type', '!=', 'entry')]}"
                    />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
